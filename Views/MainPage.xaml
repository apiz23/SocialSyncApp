<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="SocialSyncApp.Views.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Welcome Banner -->
            <Frame BackgroundColor="#6200EA" CornerRadius="15" Padding="20" HasShadow="True">
                <StackLayout>
                    <Label Text="Welcome to SocialSyncApp! 🎉" TextColor="White" 
                           FontSize="22" FontAttributes="Bold"/>
                    <Label Text="Connect with your F.R.I.E.N.D.S" TextColor="White" 
                           FontSize="14" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Statistics Cards -->
            <Label Text="Quick Stats" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                <!-- Card 1: Total Users -->
                <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#E3F2FD" 
                       CornerRadius="10" Padding="15" HasShadow="True">
                    <StackLayout>
                        <Label Text="👥" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="125" FontSize="24" FontAttributes="Bold" 
                               HorizontalOptions="Center" TextColor="#1976D2"/>
                        <Label Text="Total Users" FontSize="12" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Card 2: Friends -->
                <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#F3E5F5" 
                       CornerRadius="10" Padding="15" HasShadow="True">
                    <StackLayout>
                        <Label Text="🤝" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="47" FontSize="24" FontAttributes="Bold" 
                               HorizontalOptions="Center" TextColor="#7B1FA2"/>
                        <Label Text="Friends" FontSize="12" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Card 3: Events -->
                <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#FFF3E0" 
                       CornerRadius="10" Padding="15" HasShadow="True">
                    <StackLayout>
                        <Label Text="📅" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="12" FontSize="24" FontAttributes="Bold" 
                               HorizontalOptions="Center" TextColor="#F57C00"/>
                        <Label Text="Events" FontSize="12" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Card 4: Posts -->
                <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#E8F5E9" 
                       CornerRadius="10" Padding="15" HasShadow="True">
                    <StackLayout>
                        <Label Text="✉️" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="89" FontSize="24" FontAttributes="Bold" 
                               HorizontalOptions="Center" TextColor="#388E3C"/>
                        <Label Text="Posts" FontSize="12" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions -->
            <Label Text="Quick Actions" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>

            <Button Text="📝 Create New Post" BackgroundColor="#6200EA" TextColor="White" 
                    CornerRadius="10" HeightRequest="50" Clicked="OnCreatePostClicked"/>

            <Button Text="🎉 Add New Event" BackgroundColor="#03DAC6" TextColor="Black" 
                    CornerRadius="10" HeightRequest="50" Clicked="OnAddEventClicked"/>

            <Button Text="👥 Find Friends" BackgroundColor="#BB86FC" TextColor="White" 
                    CornerRadius="10" HeightRequest="50" Clicked="OnFindFriendsClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>