<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SocialSyncApp.Models"
             x:Class="SocialSyncApp.Views.EventsPage"
             Title="Events"
             BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#0F0F0F}">

    <Grid RowDefinitions="Auto,*" Padding="15">

        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
            <Label Text="Upcoming Events" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" 
                    Text="+ Create Event" 
                    BackgroundColor="#F57C00" 
                    TextColor="White" 
                    CornerRadius="8" 
                    Clicked="OnCreateEventClicked"/>
        </Grid>

        <ActivityIndicator Grid.Row="1"
                           x:Name="LoadingSpinner"
                           IsRunning="True"
                           IsVisible="True"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="#F57C00"/>

        <RefreshView Grid.Row="1"
                     x:Name="EventsRefreshView"
                     Command="{Binding LoadEventsCommand}"
                     Refreshing="OnRefreshing"
                     IsVisible="False"
                     RefreshColor="#F57C00">

            <CollectionView x:Name="EventsCollectionView"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="ðŸ“…" FontSize="40" HorizontalOptions="Center"/>
                        <Label Text="No upcoming events found." TextColor="Gray" HorizontalOptions="Center"/>
                        <Button Text="Refresh" Clicked="OnRefreshing" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Event">
                        <Frame Padding="0" CornerRadius="15" HasShadow="True" 
                               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#333}"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                            <Grid RowDefinitions="140,Auto">

                                <Grid Grid.Row="0">
                                    <Image Source="{Binding DisplayImage}" 
                                           Aspect="AspectFill"/>
                                    <BoxView Color="Black" Opacity="0.3"/>

                                    <Label Text="{Binding Title}" 
                                           TextColor="White" 
                                           FontSize="22" 
                                           FontAttributes="Bold" 
                                           Margin="15" 
                                           VerticalOptions="End"
                                           LineBreakMode="TailTruncation"/>
                                </Grid>

                                <VerticalStackLayout Grid.Row="1" Padding="15" Spacing="10">

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="ðŸ“…" FontSize="18" VerticalOptions="Center"/>
                                        <Label Text="{Binding FormattedDate}" 
                                               FontSize="15" 
                                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="ðŸ•" FontSize="18" VerticalOptions="Center"/>
                                        <Label Text="{Binding FormattedTime}" 
                                               FontSize="15" 
                                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="ðŸ“" FontSize="18" VerticalOptions="Center"/>
                                        <Label Text="{Binding Location}" 
                                               FontSize="15" 
                                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                               VerticalOptions="Center"
                                               LineBreakMode="TailTruncation"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="ðŸ‘¥" FontSize="18" VerticalOptions="Center"/>
                                        <Label Text="{Binding ParticipantsLabel}" 
                                               FontSize="15" 
                                               TextColor="#6200EA" 
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8" Margin="0,10,0,0">

                                        <Button Grid.Column="0" 
                                                Text="âœï¸ Edit" 
                                                BackgroundColor="#03DAC6" 
                                                TextColor="Black" 
                                                CornerRadius="8" 
                                                Padding="0"
                                                IsVisible="{Binding IsOwner}"
                                                Clicked="OnEditEventClicked"
                                                CommandParameter="{Binding .}"/>

                                        <Button Grid.Column="1" 
                                                Text="ðŸ—‘ï¸ Del" 
                                                BackgroundColor="#FFEBEE" 
                                                TextColor="#C62828" 
                                                CornerRadius="8" 
                                                Padding="0"
                                                IsVisible="{Binding IsOwner}"
                                                Clicked="OnDeleteEventClicked"
                                                CommandParameter="{Binding .}"/>

                                        <Button Text="ðŸ“‹ Details" 
                                                BackgroundColor="#6200EA" 
                                                TextColor="White" 
                                                CornerRadius="8" 
                                                Padding="0"
                                                Clicked="OnViewDetailsClicked"
                                                CommandParameter="{Binding .}">

                                            <Button.Triggers>
                                                <DataTrigger TargetType="Button" Binding="{Binding IsOwner}" Value="False">
                                                    <Setter Property="Grid.Column" Value="0" />
                                                    <Setter Property="Grid.ColumnSpan" Value="3" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Button" Binding="{Binding IsOwner}" Value="True">
                                                    <Setter Property="Grid.Column" Value="2" />
                                                    <Setter Property="Grid.ColumnSpan" Value="1" />
                                                </DataTrigger>
                                            </Button.Triggers>
                                        </Button>
                                    </Grid>

                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

    </Grid>
</ContentPage>