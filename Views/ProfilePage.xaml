<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialSyncApp.Views.ProfilePage"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <Frame BackgroundColor="#6200EA" CornerRadius="15" Padding="25" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Border Stroke="White"
                            StrokeThickness="3"
                            StrokeShape="RoundRectangle 60"
                            WidthRequest="120"
                            HeightRequest="120"
                            HorizontalOptions="Center">
                        <Image Source="https://github.com/shadcn.png" 
                               Aspect="AspectFill"
                               x:Name="ProfileImage"/>
                    </Border>

                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="NameLabel"
                               Text="Loading..."
                               TextColor="White"
                               FontSize="22"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <Label x:Name="UsernameLabel"
                               Text="@..."
                               TextColor="#E0E0E0"
                               FontSize="13"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <FlexLayout Wrap="Wrap" 
                                JustifyContent="Center" 
                                AlignItems="Center"
                                Margin="0,5,0,10">

                        <Frame x:Name="Persona1Frame"
                               IsVisible="False"
                               BackgroundColor="#4CAF50"
                               CornerRadius="20"
                               Padding="10,5"
                               HasShadow="False"
                               BorderColor="White"
                               Margin="4">
                            <Label x:Name="Persona1Label"
                                   Text="Tech"
                                   TextColor="White"
                                   FontSize="11"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame x:Name="Persona2Frame"
                               IsVisible="False"
                               BackgroundColor="#2196F3"
                               CornerRadius="20"
                               Padding="10,5"
                               HasShadow="False"
                               BorderColor="White"
                               Margin="4">
                            <Label x:Name="Persona2Label"
                                   Text="Coffee"
                                   TextColor="White"
                                   FontSize="11"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame x:Name="Persona3Frame"
                               IsVisible="False"
                               BackgroundColor="#FF9800"
                               CornerRadius="20"
                               Padding="10,5"
                               HasShadow="False"
                               BorderColor="White"
                               Margin="4">
                            <Label x:Name="Persona3Label"
                                   Text="Gamer"
                                   TextColor="White"
                                   FontSize="11"
                                   FontAttributes="Bold"/>
                        </Frame>
                    </FlexLayout>

                    <Label x:Name="BioLabel"
                           Text="No bio available."
                           TextColor="White"
                           FontSize="12"
                           HorizontalOptions="Center"
                           LineBreakMode="WordWrap"
                           HorizontalTextAlignment="Center"
                           Opacity="0.9"/>

                    <Button Text="Edit Profile" 
                            BackgroundColor="Transparent" 
                            TextColor="White" 
                            BorderColor="White" 
                            BorderWidth="1" 
                            CornerRadius="20" 
                            HeightRequest="36" 
                            FontSize="12"
                            HorizontalOptions="Center" 
                            Margin="0,10,0,0"
                            Clicked="OnEditProfileClicked"/>
                </VerticalStackLayout>
            </Frame>

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                <Frame Grid.Column="0" BackgroundColor="White" CornerRadius="12" Padding="15" HasShadow="True" BorderColor="#E0E0E0">
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="FriendsCountLabel" Text="47" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#1976D2"/>
                        <Label Text="Friends" FontSize="11" HorizontalOptions="Center" TextColor="#666"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="12" Padding="15" HasShadow="True" BorderColor="#E0E0E0">
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="EventsCountLabel" Text="12" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#7B1FA2"/>
                        <Label Text="Events" FontSize="11" HorizontalOptions="Center" TextColor="#666"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="2" BackgroundColor="White" CornerRadius="12" Padding="15" HasShadow="True" BorderColor="#E0E0E0">
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="PostsCountLabel" Text="89" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#388E3C"/>
                        <Label Text="Posts" FontSize="11" HorizontalOptions="Center" TextColor="#666"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Label Text="Profile Information" FontSize="16" FontAttributes="Bold" TextColor="#333" Margin="0,0,0,-5"/>

            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White" BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="20">

                    <Grid ColumnDefinitions="40,*" ColumnSpacing="12">
                        <Frame Grid.Column="0" CornerRadius="10" Padding="0" WidthRequest="40" HeightRequest="40" BackgroundColor="#F3E5F5" HasShadow="False" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="ðŸ“§" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        <StackLayout Grid.Column="1">
                            <Label Text="Email" FontSize="10" TextColor="#999" FontAttributes="Bold"/>
                            <Label x:Name="EmailLabel" Text="Loading..." FontSize="14" TextColor="#333"/>
                        </StackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#F0F0F0" HorizontalOptions="FillAndExpand"/>

                    <Grid ColumnDefinitions="40,*" ColumnSpacing="12">
                        <Frame Grid.Column="0" CornerRadius="10" Padding="0" WidthRequest="40" HeightRequest="40" BackgroundColor="#E3F2FD" HasShadow="False" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="ðŸ“±" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        <StackLayout Grid.Column="1">
                            <Label Text="Phone" FontSize="10" TextColor="#999" FontAttributes="Bold"/>
                            <Label x:Name="PhoneLabel" Text="Loading..." FontSize="14" TextColor="#333"/>
                        </StackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#F0F0F0" HorizontalOptions="FillAndExpand"/>

                    <Grid ColumnDefinitions="40,*" ColumnSpacing="12">
                        <Frame Grid.Column="0" CornerRadius="10" Padding="0" WidthRequest="40" HeightRequest="40" BackgroundColor="#FFF3E0" HasShadow="False" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="ðŸ“…" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        <StackLayout Grid.Column="1">
                            <Label Text="Joined" FontSize="10" TextColor="#999" FontAttributes="Bold"/>
                            <Label x:Name="DateJoinedLabel" Text="Loading..." FontSize="14" TextColor="#333"/>
                        </StackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <Button Text="Logout" BackgroundColor="#D32F2F" TextColor="White" CornerRadius="12" HeightRequest="48" FontSize="15" FontAttributes="Bold" Margin="0,10,0,20" Clicked="OnLogoutClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>